APP_NAME=Laravel
APP_ENV=production
APP_KEY=
APP_DEBUG=false
# CRITICAL: APP_URL must match your actual deployment URL exactly
# This is used by Vite to generate correct asset URLs
# For Render: https://amazinginventory-web.onrender.com
# For Azure: https://amazinginventory-app.azurewebsites.net
APP_URL=https://your-app-url.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration - Supabase PostgreSQL
# Get these from Supabase Dashboard > Project Settings > Database
# For Render deployment, use these Supabase settings
DB_CONNECTION=pgsql
DB_HOST=db.your-project-ref.supabase.co
DB_PORT=6543
# Use 6543 for connection pooler (recommended) or 5432 for direct connection
DB_DATABASE=postgres
DB_USERNAME=postgres.your-project-ref
# Note: Username format is postgres.your-project-ref for Supabase
DB_PASSWORD=your_supabase_database_password
# Supabase uses SSL by default
DB_SSLMODE=require
# Enable prepared statement emulation for connection poolers (required for Supabase pooler on port 6543)
# This prevents "prepared statement does not exist" errors
DB_EMULATE_PREPARES=true

# System Database Configuration
# The system database stores database configurations, system settings, and audit logs
# Default: SQLite (no external dependencies)
# Can be upgraded to PostgreSQL/MySQL for production
SYSTEM_DB_CONNECTION=sqlite
SYSTEM_DB_DATABASE=database/system.sqlite
# For PostgreSQL/MySQL (optional):
# SYSTEM_DB_CONNECTION=pgsql
# SYSTEM_DB_HOST=127.0.0.1
# SYSTEM_DB_PORT=5432
# SYSTEM_DB_DATABASE=system_db
# SYSTEM_DB_USERNAME=system_user
# SYSTEM_DB_PASSWORD=system_password
# SYSTEM_DB_CHARSET=utf8mb4
# SYSTEM_DB_COLLATION=utf8mb4_unicode_ci
# SYSTEM_DB_SSLMODE=prefer

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
# For Render with Supabase: Use 'supabase' for Supabase Storage
# For local development: Use 'local' for local storage
FILESYSTEM_DISK=supabase
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Configuration (if using AWS)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Supabase Configuration
# Get these from Supabase Dashboard > Project Settings > API
# Required for Render deployment with Supabase
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_PROJECT_REF=your-project-ref

# Supabase Storage Configuration (S3-compatible API)
# Get these from Supabase Dashboard > Project Settings > API
# Note: Supabase Storage S3 API uses the service role key for authentication
# For Render deployment, these are required when using Supabase Storage
SUPABASE_STORAGE_ACCESS_KEY=your_supabase_service_role_key
# Typically same as SUPABASE_SERVICE_ROLE_KEY
SUPABASE_STORAGE_SECRET_KEY=your_supabase_service_role_key
# Typically same as SUPABASE_SERVICE_ROLE_KEY
SUPABASE_STORAGE_BUCKET=laravel-storage
# Create this bucket in Supabase Dashboard > Storage
SUPABASE_STORAGE_ENDPOINT=https://your-project-ref.supabase.co/storage/v1/s3
SUPABASE_STORAGE_URL=https://your-project-ref.supabase.co/storage/v1/object/public/laravel-storage
SUPABASE_STORAGE_REGION=us-east-1

VITE_APP_NAME="${APP_NAME}"

# Filament Admin Credentials
FILAMENT_ADMIN_EMAIL=admin@example.com
FILAMENT_ADMIN_PASSWORD=password
FILAMENT_ADMIN_NAME=Admin User

# Deployment Platform Configuration
# Azure App Service (if using Azure)
# WEBSITE_SITE_NAME=your-app-name
# WEBSITE_INSTANCE_ID=

# Render (if using Render)
# No additional configuration needed - Render handles this automatically

# Supabase Redis (if using Supabase Redis addon)
# Or use Azure Redis Cache if preferred
REDIS_HOST=your-redis-host
REDIS_PASSWORD=your-redis-password
REDIS_PORT=6379
REDIS_CLIENT=phpredis

# Mail Configuration for Azure (using SendGrid or other)
MAIL_MAILER=smtp
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=your_sendgrid_api_key
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# Swagger/OpenAPI Documentation
# Set to false in production
L5_SWAGGER_GENERATE_ALWAYS=false
